<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/lightblue</item>
        <item name="colorAccent">@color/lightblue</item>

        <!-- Add this line to customize BottomNavigationView background color -->
        <item name="bottomNavigationStyle">@style/BottomNavigationView</item>
    </style>

    <!-- Style for BottomNavigationView -->
    <style name="BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <!-- Change background color -->
        <item name="android:background">@color/bottomNavColor</item>

    </style>
</resources>
